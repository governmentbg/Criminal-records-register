@using Infragistics.Web.Mvc
@using MJ_CAIS.WebPortal.External.Controllers
@using MJ_CAIS.WebPortal.External.Models.UserExternal
@using MJ_CAIS.WebSetup.Utils.CustomHtmlHelpers
@using MJ_CAIS.Common.Resources
@using MJ_CAIS.Common
@model UserExternalEditModel

@{
    var title = Model.IsAdded ? UsersResources.titleAddUser : UsersResources.titleEditUser;
    ViewData["Title"] = title;
}

<div class="container">
    <form asp-action="Edit" method="post" autocomplete="off">
        <div class="page-content scrollable-page cais-header">
            <div class="d-flex" style="justify-content: space-between">
                <div class="d-flex align-items-center">
                    <h4>@title</h4>
                </div>
                <div class="d-flex">
                    <div>
                        <button class="btn btn-success" type="submit">@CommonResources.btnSave</button>
                        <a class="btn btn-secondary" asp-controller="Application" asp-action="Index">
                            @CommonResources.btnCancel
                        </a>
                    </div>
                </div>
            </div>

            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <input asp-for="IsAdded" class="form-control" hidden />
            <input asp-for="Version" class="form-control" hidden />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mt-2">
                        <label asp-for="AdministrationName" class="control-label fw-bold"></label>: @Model.AdministrationName
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Egn" class="control-label"></label>
                        <input asp-for="Egn" class="form-control" />
                        <span asp-validation-for="Egn" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group row mt-2">
                            <label asp-for="IsAdmin" class="col-md-4"></label>
                            <div class="col-md-1">
                                <input type="checkbox" asp-for="IsAdmin" class="form-check-input" />
                                <span asp-validation-for="IsAdmin" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row mt-2">
                            <label asp-for="Active" class="col-md-4"></label>
                            <div class="col-md-1">
                                <input type="checkbox" asp-for="Active" class="form-check-input" />
                                <span asp-validation-for="Active" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>