@model ApplicationPreviewModel
@using Infragistics.Web.Mvc
@using MJ_CAIS.WebPortal.Public.Controllers
@using MJ_CAIS.WebPortal.Public.Models.Application
@using MJ_CAIS.WebSetup.Utils.CustomHtmlHelpers
@using MJ_CAIS.Common.Resources
@using MJ_CAIS.Common

@{
    var title = ApplicationResources.titleAppPreview;
    ViewData["Title"] = title;

    var createdOn = Model.CreatedOn.HasValue ? Model.CreatedOn.Value.ToString("dd.MM.yyyy HH:mm") : "";
}

<div class="page-content scrollable-page cais-header">
    <div class="d-flex" style="justify-content: space-between">
        <div class="d-flex align-items-center">
            <h4>@title</h4>
        </div>
        <div class="d-flex">
            <div>
                <a class="btn btn-secondary" asp-controller="Application" asp-action="Index">
                    @CommonResources.btnBack
                </a>
            </div>
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group mt-2">
                <label asp-for="RegistrationNumber" class="control-label fw-bold"></label>: @Model.RegistrationNumber
            </div>
            <div class="form-group mt-2">
                <label asp-for="CreatedOn" class="control-label fw-bold"></label>: @createdOn
            </div>
            <h6 class="mt-2">@ApplicationResources.lblAppInfo</h6>
            <div class="form-group mt-2 mt-2 ms-3">
                <label asp-for="Egn" class="control-label fw-bold"></label>: @Model.Egn
            </div>
            <div class="form-group mt-2 ms-3">
                <label asp-for="Email" class="control-label fw-bold"></label>: @Model.Email
            </div>
            <div class="form-group mt-2 ml-2 ms-3">
                <label asp-for="PurposeName" class="control-label fw-bold"></label>: @Model.PurposeName
            </div>
            <div class="form-group mt-2 ms-3">
                <label asp-for="Purpose" class="control-label fw-bold"></label>: @Model.Purpose
            </div>
            <div class="form-group mt-2">
                <label asp-for="IsPaid" class="control-label fw-bold"></label>: @Model.IsPaid
            </div>
            <div class="form-group mt-2">
                <label asp-for="PaymentMethodName" class="control-label fw-bold"></label>: @Model.PaymentMethodName
            </div>
            <div class="form-group mt-2">
                <label asp-for="Status" class="control-label fw-bold"></label>: @Model.Status
                <div class="row col-md-6">
                    @if (Model.HasGeneratedCertificate)
                    {
                        var downloadFileUrl = Url.Action(nameof(ApplicationController.DownloadCertificate)) + $"/{Model.Id}";

                        <a href="@downloadFileUrl" title="@ApplicationResources.titleDownloadCertificate" class="btn btn-primary ms-3 mt-3">
                            <i class="fa fa-download"></i>@ApplicationResources.titleDownloadCertificate
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
